{
  "name": "agdesign",
  "version": "1.0.0",
  "description": "AG Design website",
  "main": "index.html",
  "scripts": {
    "scss": "node-sass --output-style compressed -o dist/css src/scss",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*",
    "lint": "standard src/js",
    "uglify": "mkdirp dist/js && uglifyjs src/js/*.js -m -o dist/js/app.js",
    "imagemin": "imagemin src/images/* -o dist/images && imagemin src/images/uploads/* -o dist/images/uploads",
    "svg": "svgo -f src/images -o dist/images",
    "icons": "svgo -f src/images/icons && mkdirp dist/images && svg-sprite-generate -d src/images/icons -o dist/images/icons.svg",
    "serve": "browser-sync start --server \"dist\" --files \"dist\"",
    "data": "node generate.js",
    "pug": "pug src --out dist/",
    "build:admin": "rimraf dist/admin/* && mkdirp dist/admin && ncp src/admin/ dist/admin",
    "build:css": "npm run scss && npm run autoprefixer",
    "build:js": "npm run lint && npm run uglify",
    "build:images": "npm run imagemin && npm run svg && npm run icons",
    "build:data": "npm run data",
    "build:html": "ncp src/index.html dist/index.html",
    "build:favicon": "ncp src/favicon.ico dist/favicon.ico",
    "build:fonts": "mkdirp dist/fonts && cp src/fonts/* dist/fonts/",
    "build:all": "npm run build:css && npm run build:data && npm run build:js && npm run build:images && npm run build:html && npm run build:fonts && npm run build:favicon && npm run build:admin",
    "watch:css": "onchange \"src/scss/*.scss\" -- npm run build:css",
    "watch:js": "onchange \"src/js/*.js\" -- npm run build:js",
    "watch:images": "onchange \"src/images\" -- npm run build:images",
    "watch:html": "onchange \"src/*.html\" -- npm run build:html",
    "watch:all": "npm-run-all -p serve watch:css watch:js watch:images watch:html",
    "clean": "rimraf dist/{css/*,js/*,images/*,*.html}"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:jadedigital/agdesign.git"
  },
  "author": "Jade Digital",
  "license": "MIT",
  "bugs": {
    "url": "git@github.com:jadedigital/agdesign.git/issues"
  },
  "homepage": "https://jadedigital.ca",
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "browser-sync": "^2.27.10",
    "copy": "^0.3.0",
    "front-matter": "^2.1.2",
    "imagemin-cli": "^3.0.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "node-sass": "^3.13.0",
    "npm-run-all": "^3.1.1",
    "onchange": "^3.0.2",
    "postcss-cli": "^2.6.0",
    "pug": "^2.0.0-rc.1",
    "pug-cli": "^1.0.0-alpha6",
    "standard": "^8.6.0",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^0.7.1",
    "uglify-js": "^2.7.4"
  }
}
